@using SocialMedia.Models
@model Information

@{
    ViewData["Title"] = "Profile";
}

	

<div style="margin:20px;display:flex;align-items:center;justify-content:space-evenly;">
	@if (ViewData["Message"] != null || ViewData["AlertType"] != null){
		<div class="alert alert-@ViewData["AlertType"] alert-dismissible fade show" role="alert">
				@ViewData["Message"]
		  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		  </button>
		</div>
		}
	<div class="">
	</div>

	<div class="col-lg-6" style="flex:1;align-items:center;">
									<div class="central-meta">
										<div class="editing-info">
											<h5 class="f-title"><i class="ti-info-alt"></i> Update Your Information</h5>

											<form asp-action="Profile">
												<div class="form-group">	
												  <input type="email" id="input" asp-for="Email" required="required">
												  <label class="control-label" for="input">Email</label><i class="mtrl-select"></i>
												</div>
												
												
												<div class="form-group">	
												  <input type="text" asp-for="Phone" required="required">
												  <label class="control-label" for="input">Phone No.</label><i class="mtrl-select"></i>
												</div>
												<div class="form-group">	
												  <input type="date" asp-for="BirthDate" required="required">
												  <label class="control-label" for="input">Birth Date</label><i class="mtrl-select"></i>
												</div>
												<div class="form-group">	
												  <select asp-for="Sex">
													  <option value="Male">Male</option>
													  <option value="Female">Female</option>
													  
												  </select>
												<label class="control-label" for="input">Gender</label><i class="mtrl-select"></i>

												</div>
												
												<div class="form-group">	
												  <input type="text" asp-for="Address" required="required">
												  <label class="control-label" for="input">Address</label><i class="mtrl-select"></i>
												</div>

												<div class="form-group">	
												  <input type="text" asp-for="Job" required="required">
												  <label class="control-label" for="input">Job</label><i class="mtrl-select"></i>
												</div>

												


												
												<div class="submit-btns">
													<button type="submit" class="mtr-btn"><span>Save</span></button>
												</div>
											</form>
										</div>
									</div>	
								</div>
	<div class="flex:1;"></div>
</div>